<Window x:Class="BSACLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:BSACLibrary"
        mc:Ignorable="d"
        Title="Картотека периодических изданий" Background="WhiteSmoke" Height="700" Width="1200" WindowStartupLocation="CenterScreen" Icon="favicons.ico" Closed="Window_Closed" StateChanged="Window_StateChanged">
    <Window.Resources>
        <Style x:Key="ToggleLeftCorner" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid x:Name="grid">
                            <Border x:Name="border" Background="Gainsboro"  BorderThickness="0" CornerRadius="4,0,0,4">
                                <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextBlock.FontWeight="Bold"
                             TextBlock.FontSize="16"></ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="border" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleNormalCorner" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid x:Name="grid">
                            <Border x:Name="border" Background="Gainsboro"  BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextBlock.FontWeight="Bold"
                             TextBlock.FontSize="16"></ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="border" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleRightCorner" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid x:Name="grid">
                            <Border x:Name="border" Background="Gainsboro"  BorderThickness="0" CornerRadius="0,4,4,0">
                                <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextBlock.FontWeight="Bold"
                             TextBlock.FontSize="16"></ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="border" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <!--Разбиваем форму на таблицу-->
    <Grid Background="WhiteSmoke" Margin="10,0,10,10">
        <!--Определение строк-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Определение столбцов-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" Background="WhiteSmoke" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="0" Margin="-10,0,0,0">
            <Menu.Resources>
                <Style TargetType="Image">
                    <Setter Property="Height" Value="16"/>
                    <Setter Property="Width" Value="16"/>
                </Style>
            </Menu.Resources>
            <MenuItem Header="_Файл">
                <MenuItem Header="_Новый">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/new.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Добавляем вертикальную полосу-->
                <Separator></Separator>
                <MenuItem Header="_Выход" Click="Window_Closed">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/login.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Опции">
                <MenuItem Header="_Настройки" Click="OptionsWindow_Open">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/settings.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Справка">
                <MenuItem Header="_Помощь" Click="HelpFile_Open">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/help.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Добавляем вертикальную полосу-->
                <Separator></Separator>
                <MenuItem Header="_О программе" Click="AboutWindow_Open">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/about.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="tBoxInput" Padding="2" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="2" 
                MinHeight="25" FontSize="14" Foreground="Gray" 
                Text="Поиск информации по ключевому слову или фразе. Например, &quot;802.11ac&quot;" 
                PreviewMouseLeftButtonUp="tBoxInput_PreviewMouseLeftButtonUp" 
                PreviewKeyDown="tBoxInput_PreviewKeyDown" MaxLength="128"/>
        <ListBox x:Name="searchListBox" Panel.ZIndex="1" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="3" 
                Grid.RowSpan="3" MinHeight="25" FontSize="14" Visibility="Hidden" 
                VerticalAlignment="Top" MaxHeight="240" MouseLeave="searchListBox_MouseLeave"/>
        <Image x:Name="gifAnim" Margin="0,0,2,0" Grid.Column="6" Grid.Row="2" 
                gif:ImageBehavior.AnimatedSource="pack://siteoforigin:,,,/Resources/searching.gif" Width="22" 
                HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Hidden"/>
        <ToggleButton x:Name="MagazinesBtn" Height="40" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                VerticalAlignment="Center" Content="Журналы" Style="{DynamicResource ToggleLeftCorner}"/>
        <ToggleButton x:Name="NewspapersBtn" Height="40" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" 
                VerticalAlignment="Center" Content="Газеты" Style="{DynamicResource ToggleNormalCorner}"/>
        <ToggleButton x:Name="EditBtn" Height="40" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" 
                VerticalAlignment="Center" Content="Редактор" Style="{DynamicResource ToggleRightCorner}"/>
        <TabControl BorderBrush="Gainsboro" Background="WhiteSmoke" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Height" Value="0"/>
                    <Setter Property="Width" Value="0"/>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                </Style>
            </TabControl.Resources>
            <TabItem x:Name="MagazinesTab" IsSelected="{Binding IsChecked, ElementName=MagazinesBtn}">
                <TextBlock Text="Журналы"/>
            </TabItem>
            <TabItem x:Name="NewspapersTab" IsSelected="{Binding IsChecked, ElementName=NewspapersBtn}">
                <TextBlock Text="Газеты"/>
            </TabItem>
            <TabItem x:Name="EditTab" IsSelected="{Binding IsChecked, ElementName=EditBtn}">
                <TextBlock Text="Редактирование"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
