<Window x:Class="BSACLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:BSACLibrary"
        mc:Ignorable="d"
        Title="Картотека периодических изданий" Height="700" Width="1200" WindowStartupLocation="CenterScreen" Icon="favicons.ico" Closed="Window_Closed">
    <!--Разбиваем форму на таблицу--> 
    <Grid Background="WhiteSmoke" Margin="10,0,10,10">
        <!--Определение строк-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Определение столбцов-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" Background="WhiteSmoke" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Новый">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/add (1).png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Добавляем вертикальную полосу-->
                <Separator></Separator>
                <MenuItem Header="_Выход" Click="Window_Closed">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/login.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Опции">
                <MenuItem Header="_Настройки" Click="OptionsWindow_Open">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/list (1).png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Справка">
                <MenuItem Header="_Помощь" Click="HelpFile_Open">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/question-circular-button.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Добавляем вертикальную полосу-->
                <Separator></Separator>
                <MenuItem Header="_О программе" Click="AboutWindow_Open">
                    <MenuItem.Icon>
                        <Image Source="pack://siteoforigin:,,,/Resources/speech-bubble1.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="tBoxInput" Padding="2" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" MinHeight="25" FontSize="14" Foreground="Gray" Text="Поиск информации по ключевому слову или фразе. Например, &quot;802.11ac&quot;" PreviewMouseLeftButtonUp="tBoxInput_PreviewMouseLeftButtonUp" PreviewKeyDown="tBoxInput_PreviewKeyDown" MaxLength="128" VerticalAlignment="Center"/>
        <ListBox x:Name="searchListBox" Panel.ZIndex="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Top"  MinHeight="25" FontSize="14" Visibility="Hidden" MaxHeight="230" MouseLeave="searchListBox_MouseLeave"/>
        <Image x:Name="gifAnim" Margin="0,0,12,0" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" gif:ImageBehavior.AnimatedSource="pack://siteoforigin:,,,/Resources/2.gif" Width="22" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Hidden"/>
        <TabControl BorderBrush="Gainsboro" Background="White" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="-2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="150,5,150,5"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="WhiteSmoke"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Журналы" FontSize="16">
                <Label Content="Содержание"/>
            </TabItem>
            <TabItem Header="Газеты" FontSize="16"/>
            <TabItem Header="Редактирование" FontSize="16"/>
        </TabControl>
    </Grid>
</Window>
