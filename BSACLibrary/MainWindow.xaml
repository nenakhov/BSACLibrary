<Window x:Class="BSACLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSACLibrary"
        mc:Ignorable="d"
        Title="Картотека периодических изданий" Height="720" Width="1280" WindowStartupLocation="CenterScreen" Icon="favicons.ico" Closed="Window_Closed">
    <!--Разбиваем форму на таблицу-->
    <Grid>
        <!--Определение строк-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <!--Определение столбцов-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cBoxInput" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" IsEditable="True" MinHeight="25" FontSize="14" Foreground="Gray" ToolTip="Ввод ключевого слова или фразы для поиска" Text="Поиск в каталоге. Например, &quot;802.11g&quot;" MouseUp="cBoxInput_MouseUp" StaysOpenOnEdit="True" KeyDown="cBoxInput_KeyDown"/>
        <Menu x:Name="menu" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Background="White">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Window_Closed"></MenuItem>
            </MenuItem>
            <MenuItem Header="Опции">
                <MenuItem Header="Настройки" Click="OptionsWindow_Open"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Помощь" Click="HelpFile_Open"></MenuItem>
                <!--Добавляем вертикальную полосу-->
                <Separator></Separator>
                <MenuItem Header="О программе" Click="AboutWindow_Open"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
